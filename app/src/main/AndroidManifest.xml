<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cygoapp">

    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CyGoApp"
        tools:targetApi="31">
        <activity
            android:name=".activity_rating"
            android:exported="false" />
        <activity
            android:name=".activity_set_ride_details"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".activity_drive"
            android:exported="false"
            android:label="@string/title_activity_drive"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity_change_password"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity_change_email"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity_user_details"
            android:exported="false"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="ica" />

        <activity
            android:name=".activity_booked_rides"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity_offered_rides"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity_go"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity_home"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity_sign_in"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity_sign_up"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity_get_start"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity_main"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>