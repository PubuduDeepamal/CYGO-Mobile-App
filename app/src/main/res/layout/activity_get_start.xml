<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_get_start"
    android:orientation="vertical"
    android:background="#fff" >

    <ImageView
        android:id="@+id/shape"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="-12dp"
        android:src="@drawable/shape" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="206dp"
        android:layout_height="121dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="120dp"
        android:src="@drawable/welcome_everyone" />

    <ImageView
        android:id="@+id/group_8"
        android:layout_width="360dp"
        android:layout_height="260dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:src="@drawable/group_8" />

    <ImageView
        android:id="@+id/gowith"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:src="@drawable/go_with"/>
    
    <ImageView
        android:id="@+id/logo"
        android:layout_width="114dp"
        android:layout_height="117dp"
        android:transitionName="logo"
        android:layout_marginStart="225dp"
        android:layout_marginTop="-103dp"
        android:layout_marginEnd="50dp"
        android:src="@drawable/cygo"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <Button
            android:id="@+id/btnGetStart"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="GET STARTED"
            android:textColor="@color/black"
            android:backgroundTint="@color/primary_color"/>

    </LinearLayout>

</LinearLayout>