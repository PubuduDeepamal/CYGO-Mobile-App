<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_sign_up"
    android:orientation="vertical"
    android:background="#fff" >

    <ImageView
        android:id="@+id/shape"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="-12dp"
        android:src="@drawable/shape" />

    <TextView
        android:id="@+id/lblWelOnboard"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="140dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Welcome Onboard!"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/txtName"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:fontFamily="@font/poppins_regular"
        android:foregroundTint="#1DE099"
        android:paddingLeft="10dp"
        android:hint="Enter Your Name"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/txtContact"
        android:layout_width="310dp"
        android:layout_height="46dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:paddingLeft="10dp"
        android:fontFamily="@font/poppins_regular"
        android:foregroundTint="#1DE099"
        android:hint="Enter Your Contact Number"
        android:inputType="phone"
        android:textAlignment="textStart"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="310dp"
        android:layout_height="46dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:paddingLeft="10dp"
        android:fontFamily="@font/poppins_regular"
        android:foregroundTint="#1DE099"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        android:textAlignment="textStart"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/txtNIC"
        android:layout_width="310dp"
        android:layout_height="46dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:paddingLeft="10dp"
        android:fontFamily="@font/poppins_regular"
        android:foregroundTint="#1DE099"
        android:hint="Enter Your NIC"
        android:inputType="text"
        android:textAlignment="textStart"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtName" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="310dp"
        android:layout_height="46dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:paddingLeft="10dp"
        android:fontFamily="@font/poppins_regular"
        android:foregroundTint="#1DE099"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textAlignment="textStart"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/txtConfirmPassword"
        android:layout_width="310dp"
        android:layout_height="46dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:paddingLeft="10dp"
        android:fontFamily="@font/poppins_regular"
        android:foregroundTint="#1DE099"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textAlignment="textStart"
        android:textSize="12sp"/>


    <CheckBox
        android:id="@+id/chkterms"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#636363"
        android:text=" Accept Terms and Conditions"
        android:textSize="12sp"
        android:background="?attr/selectableItemBackgroundBorderless"/>



    <Button
        android:id="@+id/btnterms"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/primary_color"
        android:text="Read Terms and Conditions"
        android:textSize="12sp"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="308dp"
        android:layout_height="58dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="50dp"
        android:text="Register"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:backgroundTint="@color/primary_color" />

    <TextView
        android:id="@+id/textAccSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Already have an account?"/>

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="255dp"
        android:layout_marginTop="-36dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/primary_color"
        android:text="Sign In"
        android:textSize="13sp"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_marginStart="180dp"
        android:layout_marginTop="-300dp"
        android:layout_marginEnd="0dp"
        android:elevation="10dp"
        android:visibility="gone"/>
</LinearLayout>